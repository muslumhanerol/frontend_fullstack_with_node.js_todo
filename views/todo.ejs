<!-- todo.ejs -->
<!DOCTYPE html>
<html lang="en">

<head>
    <title>Todo Page</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        crossorigin="anonymous" />

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css"
        crossorigin="anonymous" />

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- External CSS -->
    <link rel="stylesheet" href="/css/index.css" />

    <!-- Internal CSS for Frosted Glass Effect -->
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap');

        .frosted-glass {
            background: rgba(252, 252, 252, 0.2);
            backdrop-filter: blur(10px);
            border-radius: 10px;
            padding: 20px;
            box-shadow: 0 4px 6px rgba(160, 133, 133, 0.1);
        }

        #todo h3 h2 {
            font-family: "Poppins", sans-serif;
            font-weight: 300;
        }
    </style>



</head>

<body class="container">
    <!-- Navbar -->
    <%- include("partials/navbar") %>


        <!-- Main Content -->
        <main class="container my-5">
            <section id="todo" class="frosted-glass">

                <h3 class="text-center mt-4 mb-4 display-5 text-light text-uppercase">Todo Form</h3>

                <form action="/todo" method="post" id="todo-form" name="todo-form">
                    <!-- CSRF Token -->
                    <input type="hidden" id="_csrf" name="_csrf" value="<%= csrfToken %>" />

                    <div class="form-group mb-3">
                        <label for="todoHeader" class="form-label">TODO BAŞLIĞI</label>
                        <input type="text" class="form-control" id="todoHeader" name="todoHeader"
                            placeholder="Todo başlığı" required />
                    </div>

                    <div class="form-group mb-3">
                        <label for="todoContent" class="form-label">TODO İÇERİĞİ</label>
                        <textarea class="form-control" id="todoContent" name="todoContent" placeholder="Todo içeriği"
                            rows="3" required></textarea>
                        <small id="char-count" class="text-success">Kalan Harf Sayısı: 500</small>
                    </div>

                    <div class="form-group mb-3">
                        <button type="reset" class="btn btn-primary">Temizle</button>
                        <button type="submit" class="btn btn-success">Gönder</button>
                    </div>
                </form>

                <hr />
                <h2 class="text-center mt-4 mb-4 text-light display-5 text-uppercase">Todo Listesi</h2>

                <table id="todo-table" class="table table-hover table-striped">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>TODO BAŞLIĞI</th>
                            <th>TODO İÇERİĞİ</th>
                            <th>OLUŞTURMA TARİHİ</th>
                            <th>İŞLEMLER</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>

                <a class="btn btn-primary" href="/">Anasayfa'ya Git</a>
            </section>
        </main>

        <!-- Footer -->
        <%- include("partials/footer") %>

            <!-- Bootstrap JS -->
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
                crossorigin="anonymous"></script>

            <!-- External JS -->
            <script src="/js/todo.js"></script>
</body>

</html>

<!-- Diğer dosyalar benzer şekilde düzenlendi -->